@model WA_TravelAgency_v1.Models.DomainModels.Offer
@using Microsoft.AspNetCore.Identity
@using System.Security.Claims;
@inject SignInManager<WA_TravelAgency_v1.Models.Identity.ApplicationUser> SignInManager
@inject UserManager<WA_TravelAgency_v1.Models.Identity.ApplicationUser> UserManager

@{
    ViewData["Title"] = "Details";
}




<div class="container mt-3 mb-3" style="width: 65rem;">

        @if (User.IsInRole("Admin") || User.IsInRole("Employee")){

            <div class="mr-4 pr-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary mr-2" style="border-color:dimgrey">Edit offer</a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger" style="border-color:dimgrey">Delete offer</a>
            <a class="btn btn-outline-success mr-4" asp-action="CreateMyReservation" asp-controller="Reservation" asp-route-id="@Model.Id"> Reserve</a>

            @if(@Model.PromotionId != null){
                <a asp-action="Edit" asp-controller="Promotion" asp-route-id="@Model.PromotionId" class="btn btn-outline-primary mr-2" style="border-color:dimgrey">Edit promotion</a>
                <a asp-action="Edit" asp-controller="Promotion" asp-route-id="@Model.PromotionId" class="btn btn-outline-danger mr-2" style="border-color:dimgrey">Delete promotion</a>
            } else{
                <a asp-action="Create" asp-controller="Promotion" class="btn btn-outline-warning" asp-route-id="@Model.Id">
                   Apply promotion
            </a>
            }
            </div>

        }

    <div class="text-center mt-0">
        <h2>@Model.Name</h2>
        <br/>
        <img src="~/Images/OfferImages/@Model.ImageName" style="height:200px; width:300px;">
        <br>
        <br>

        <hr class="mb-2">
        <div class="container mt-3 mb-3" style="width: 65rem;">


            <dl class="row m-5">
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.Type) <span><b>:</b></span>
                </dt>
                <dd class="col-sm-5">
                    @Html.DisplayFor(model => model.Type)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.PricePerPerson) <span><b>:</b></span>
                </dt>
                <dd class="col-sm-5">
                    @Html.DisplayFor(model => model.PricePerPerson)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.OriginalPrice) <span><b>:</b></span>
                </dt>
                <dd class="col-sm-5">
                    @Html.DisplayFor(model => model.OriginalPrice)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.FromDate) <span><b>:</b></span>
                </dt>
                <dd class="col-sm-5">
                    @Html.DisplayFor(model => model.FromDate)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.ToDate) <span><b>:</b></span>
                </dt>
                <dd class="col-sm-5">
                    @Html.DisplayFor(model => model.ToDate)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.Status) <span><b>:</b></span>
                </dt>
                <dd class="col-sm-5">
                    @Html.DisplayFor(model => model.Status)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.МinNumOfPassForGratis) <span><b>:</b></span>
                </dt>
                <dd class="col-sm-5">
                    @Html.DisplayFor(model => model.МinNumOfPassForGratis)
                </dd>
            </dl>


     
        </div>

    </div>

    <hr style="background-color:black;" />

    <br />
    <br/>
    <div class="container">
        @{

            <div class="container card mb-3 ml-4" style="background-color: #7CBEED;">
                <h5>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-reply" viewBox="0 0 16 16">
                        <path d="M6.598 5.013a.144.144 0 0 1 .202.134V6.3a.5.5 0 0 0 .5.5c.667 0 2.013.005 3.3.822.984.624 1.99 1.76 2.595 3.876-1.02-.983-2.185-1.516-3.205-1.799a8.74 8.74 0 0 0-1.921-.306 7.404 7.404 0 0 0-.798.008h-.013l-.005.001h-.001L7.3 9.9l-.05-.498a.5.5 0 0 0-.45.498v1.153c0 .108-.11.176-.202.134L2.614 8.254a.503.503 0 0 0-.042-.028.147.147 0 0 1 0-.252.499.499 0 0 0 .042-.028l3.984-2.933zM7.8 10.386c.068 0 .143.003.223.006.434.02 1.034.086 1.7.271 1.326.368 2.896 1.202 3.94 3.08a.5.5 0 0 0 .933-.305c-.464-3.71-1.886-5.662-3.46-6.66-1.245-.79-2.527-.942-3.336-.971v-.66a1.144 1.144 0 0 0-1.767-.96l-3.994 2.94a1.147 1.147 0 0 0 0 1.946l3.994 2.94a1.144 1.144 0 0 0 1.767-.96v-.667z" />
                    </svg> Transport
                </h5>

                <p><b>Vehicle:</b> @Model.Transport.Vehicle</p>
                <p><b>Company:</b> @Model.Transport.Company </p>
                <p><b>Capacity: </b> @Model.Transport.Capacity</p>

            </div>
        }

    </div>


    <hr style="background-color:black;" />

    <br />
    <div class="container">
        @{

            <div class="container card mb-3 ml-4" style="background-color: #61C9E3;">
                <h5>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-reply" viewBox="0 0 16 16">
                        <path d="M6.598 5.013a.144.144 0 0 1 .202.134V6.3a.5.5 0 0 0 .5.5c.667 0 2.013.005 3.3.822.984.624 1.99 1.76 2.595 3.876-1.02-.983-2.185-1.516-3.205-1.799a8.74 8.74 0 0 0-1.921-.306 7.404 7.404 0 0 0-.798.008h-.013l-.005.001h-.001L7.3 9.9l-.05-.498a.5.5 0 0 0-.45.498v1.153c0 .108-.11.176-.202.134L2.614 8.254a.503.503 0 0 0-.042-.028.147.147 0 0 1 0-.252.499.499 0 0 0 .042-.028l3.984-2.933zM7.8 10.386c.068 0 .143.003.223.006.434.02 1.034.086 1.7.271 1.326.368 2.896 1.202 3.94 3.08a.5.5 0 0 0 .933-.305c-.464-3.71-1.886-5.662-3.46-6.66-1.245-.79-2.527-.942-3.336-.971v-.66a1.144 1.144 0 0 0-1.767-.96l-3.994 2.94a1.147 1.147 0 0 0 0 1.946l3.994 2.94a1.144 1.144 0 0 0 1.767-.96v-.667z" />
                    </svg> Destination
                </h5>

                <p><b>Country:</b> @Model.Destination.Country</p>
                <p><b>City:</b> @Model.Destination.City </p>
                <p><b>Accomodation: </b> @Model.Destination.Accommodation</p>

            </div>
        }

    </div>

    <hr style="background-color:black;" />

    <br />
    <br/>

    <div class="container mb-3 ml-4">

        <div class="d-inline mt-5">

            @if (User.IsInRole("User"))
            {
                <a class="btn btn-outline-success mr-4" asp-action="CreateMyReservation" asp-controller="Reservation" asp-route-id="@Model.Id">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-handbag" viewBox="0 0 16 16">
                        <path d="M8 1a2 2 0 0 1 2 2v2H6V3a2 2 0 0 1 2-2zm3 4V3a3 3 0 1 0-6 0v2H3.36a1.5 1.5 0 0 0-1.483 1.277L.85 13.13A2.5 2.5 0 0 0 3.322 16h9.355a2.5 2.5 0 0 0 2.473-2.87l-1.028-6.853A1.5 1.5 0 0 0 12.64 5H11zm-1 1v1.5a.5.5 0 0 0 1 0V6h1.639a.5.5 0 0 1 .494.426l1.028 6.851A1.5 1.5 0 0 1 12.678 15H3.322a1.5 1.5 0 0 1-1.483-1.723l1.028-6.851A.5.5 0 0 1 3.36 6H5v1.5a.5.5 0 1 0 1 0V6h4z" />
                    </svg> Reserve
                </a>

                <a asp-action="Index" class="btn btn-outline-warning mr-4">Back to list</a>
            }


    </div>
    </div>


    @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
    {

        <hr style="background-color:black;" />
        <h3>Reservations</h3>
        <br />
        <div class="container">
            @{
                if (Model.Reservations.Count > 0)
                {
                    foreach (var reservation in Model.Reservations)
                    {
                        <div class="container card mb-3 ml-4" style="background-color: #f8f8f8; border-color:#A5AE9E">
                            <h5>
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-reply" viewBox="0 0 16 16">
                                    <path d="M6.598 5.013a.144.144 0 0 1 .202.134V6.3a.5.5 0 0 0 .5.5c.667 0 2.013.005 3.3.822.984.624 1.99 1.76 2.595 3.876-1.02-.983-2.185-1.516-3.205-1.799a8.74 8.74 0 0 0-1.921-.306 7.404 7.404 0 0 0-.798.008h-.013l-.005.001h-.001L7.3 9.9l-.05-.498a.5.5 0 0 0-.45.498v1.153c0 .108-.11.176-.202.134L2.614 8.254a.503.503 0 0 0-.042-.028.147.147 0 0 1 0-.252.499.499 0 0 0 .042-.028l3.984-2.933zM7.8 10.386c.068 0 .143.003.223.006.434.02 1.034.086 1.7.271 1.326.368 2.896 1.202 3.94 3.08a.5.5 0 0 0 .933-.305c-.464-3.71-1.886-5.662-3.46-6.66-1.245-.79-2.527-.942-3.336-.971v-.66a1.144 1.144 0 0 0-1.767-.96l-3.994 2.94a1.147 1.147 0 0 0 0 1.946l3.994 2.94a1.144 1.144 0 0 0 1.767-.96v-.667z" />
                                </svg> Reservation
                            </h5>
                            <p><b>Reserved by: </b>@reservation.ReservedBy</p>
                            <p><b>Number of passengers: </b>@reservation.NumOfPassengers</p>
                            <p><b>Amount to pay:</b> @reservation.AmountToPay</p>
                            <p><b>Reservation date: </b> @reservation.ReservationDate</p>
                            <p><b>Status: </b> @reservation.Status</p>

                        </div>
                    }
                }
                else
                {


                }
            }

        </div>
    }

</div>


