@model WA_TravelAgency_v1.Models.DomainModels.Reservation

@{
    ViewData["Title"] = "CreateMyReservation";
}

<h1>CreateMyReservation</h1>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="MakeAReservation" asp-controller="Offer" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="NumOfPassengers" class="control-label"></label>
                <input asp-for="NumOfPassengers" class="form-control" />
                <span asp-validation-for="NumOfPassengers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <input type="hidden" asp-for="Id" />
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
