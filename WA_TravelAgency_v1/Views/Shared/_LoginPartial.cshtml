@using Microsoft.AspNetCore.Identity
@using WA_TravelAgency_v1.Models.Identity;
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a class="nav-link text-dark mt-1" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">My account</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link text-dark btn btn-outline-primary m-1 mb-0 mt-1" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-dark btn btn-outline-info mt-1" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
